<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/btn_team2"
        android:layout_width="246dp"
        android:layout_height="143dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:background="@drawable/btn_menu"
        android:drawableLeft="@drawable/ic_map"
        android:onClick="AbrirMapa"
        android:paddingRight="50dp"
        android:text="Mapa"
        android:textSize="18sp"
        app:backgroundTint="#112F53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_team3" />

    <Button
        android:id="@+id/btn_team"
        android:layout_width="246dp"
        android:layout_height="143dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:background="@drawable/btn_menu"
        android:drawableLeft="@drawable/shield"
        android:onClick="Team"
        android:paddingRight="50dp"
        android:text="Times"
        android:textSize="18sp"
        app:backgroundTint="#112F53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_player" />

    <Button
        android:id="@+id/btn_player"
        android:layout_width="246dp"
        android:layout_height="143dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:background="@drawable/btn_menu"
        android:drawableLeft="@drawable/user"
        android:onClick="Player"
        android:paddingRight="50dp"
        android:text="Jogadores"
        android:textSize="18sp"
        app:backgroundTint="#112F53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_menu" />

    <Button
        android:id="@+id/btn_team3"
        android:layout_width="246dp"
        android:layout_height="143dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:background="@drawable/btn_menu"
        android:drawableLeft="@drawable/arena"
        android:onClick="Arena"
        android:paddingRight="50dp"
        android:text="Arena"
        android:textSize="18sp"
        app:backgroundTint="#112F53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_team" />

    <TextView
        android:id="@+id/txt_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="281dp"
        android:layout_marginRight="281dp"
        android:drawableLeft="@drawable/menu"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:text="Menu"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>